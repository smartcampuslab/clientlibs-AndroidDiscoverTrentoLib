<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/my_map_fragment1"
            android:name="eu.trentorise.smartcampus.dt.fragments.stories.MyMapFragment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:tag="mapfragment" />

        <ScrollView
            android:id="@+id/story_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" >

                <TextView
                    android:id="@+id/story_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/story_details_rating"
                    style="@style/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/story_details_title"
                    android:clickable="false"
                    android:numStars="5" />

                <ImageView
                    android:id="@+id/img_attendees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/story_details_title"
                    android:layout_toRightOf="@+id/story_details_rating"
                    android:contentDescription="@string/attendees"
                    android:src="@drawable/ic_attendees" />

                <TextView
                    android:id="@+id/attendees_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/story_details_title"
                    android:layout_toRightOf="@+id/img_attendees"
                    android:textAppearance="@android:style/TextAppearance.Large" />

                <TextView
                    android:id="@+id/story_details_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/story_details_rating"
                    android:autoLink="web|all" />
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/start_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <Button
                android:id="@+id/btn_story_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_story" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/step_details"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <include
                        android:id="@+id/step_counter"
                        layout="@layout/step_counter" />

                    <TextView
                        android:id="@+id/step_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <TextView
                    android:id="@+id/step_details_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/navigation_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_story_prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prev_step" />

            <Button
                android:id="@+id/btn_story_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/next_step" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>